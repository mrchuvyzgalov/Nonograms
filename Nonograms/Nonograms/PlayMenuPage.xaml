<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nonograms.PlayMenuPage"
             Title="Меню">
    
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="15" Padding="0">
                <Button x:Name = "StudyButton" Text="Обучение" BackgroundColor="#e1e1e1" FontSize="Medium" Clicked="StudyButton_Clicked"/>
            </Frame>
            <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="15" Padding="0">
                <Button x:Name = "BlackCrossButton" Text="Черно-белые кроссворды" BackgroundColor="#e1e1e1" FontSize="Medium" Clicked="BlackCrossButton_Clicked"/>
            </Frame>
            <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="15" Padding="0">
                <Button x:Name = "ColorCrossButton" Text="Цветные кроссворды" BackgroundColor="#e1e1e1" FontSize="Medium" Clicked="ColorCrossButton_Clicked"/>
            </Frame>
            <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="15" Padding="0">
                <Button x:Name = "MyCrossButton" Text="Мои кроссворды" BackgroundColor="#e1e1e1" FontSize="Medium" Clicked="MyCrossButton_Clicked"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>