<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nonograms.BlackCrossMenu"
             Title="Черно-белые кроссворды">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="15" Padding="0">
                <Button x:Name="FiveToFiveButton" BackgroundColor="Transparent" Text="5x5" FontSize="Large" HorizontalOptions="Center" TextColor="Black" Clicked="FiveToFiveButton_Clicked"/>
            </Frame>
            <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="15" Padding="0">
                <Button x:Name="TenToTenButton" BackgroundColor="Transparent" Text="10x10" FontSize="Large" HorizontalOptions="Center" TextColor="Black" Clicked="TenToTenButton_Clicked"/>
            </Frame>
            <Frame BorderColor="Gray" BackgroundColor="#e1e1e1" CornerRadius="15" Padding="0">
                <Button x:Name="FifteenToFifteenButton" BackgroundColor="Transparent" Text="15x15" FontSize="Large" HorizontalOptions="Center" TextColor="Black" Clicked="FifteenToFifteenButton_Clicked"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>